generator client {
   provider = "prisma-client-js"
}

datasource database {
   provider  = "postgresql"
   url       = env("POSTGRES_PRISMA_URL")
   directUrl = env("POSTGRES_PRISMA_NON_POOLING")
}

model User {
   id Int @id @default(autoincrement())

   fullName String
   email    String
   password String

   createdAt DateTime @default(now())
   updatedAt DateTime @updatedAt
}

model Product {
   id Int @id @default(autoincrement())

   name     String
   imageUrl String

   createdAt DateTime @default(now())
   updatedAt DateTime @updatedAt
}
